<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
        
        <!-- This configuration file defines logging levels and formats -->
        
  <appender name="SpringWsRest" class="org.apache.log4j.RollingFileAppender">
  
	<param name="file" value="spring-ws-rest.log"/>
	<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss,SSS} [%t] %-5p %c - %m%n"/>
	</layout>
  </appender>
  
  <logger name="org.springframework" additivity="false">
  	<level value="warn"/>
  	<appender-ref ref="SpringWsRest"/>
  </logger>

  <logger name="org.apache" additivity="false">
  	<level value="warn"/>
  	<appender-ref ref="SpringWsRest"/>
  </logger>

  <root>
    <level value="debug" />
    <appender-ref ref="SpringWsRest"/>
  </root>

</log4j:configuration>