<beans

	 xmlns="http://www.springframework.org/schema/beans"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	
	
 
	<bean id="customer" class="com.vani.Customer">
		<property name="action" value="Buy" />
	</bean>
	
	<bean id="customer2" class="com.vani.Customer2">
		<property name="action" value="Sell" />
	</bean>
	
	<bean id="person" class="com.vani.Person">
		<property name="firstName" value="Vani"></property>
		<property name="lastName" value="Talla"></property>
	</bean>
	
	<context:annotation-config/>
 
</beans>